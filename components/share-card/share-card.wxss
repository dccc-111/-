/* 分享卡片组件样式 */

.share-card {
  width: 280rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.share-card:active {
  background-color: #f5f5f5;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transform: scale(0.98);
}

/* 用户头像 */
.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

/* 用户昵称 */
.user-nickname {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

/* 美食图片 */
.food-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
}

/* 描述文字 */
.food-description {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.4;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  max-width: 100%;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .share-card {
    width: 240rpx;
    padding: 20rpx;
    gap: 12rpx;
  }
  
  .user-avatar {
    width: 56rpx;
    height: 56rpx;
  }
  
  .user-nickname {
    font-size: 20rpx;
  }
  
  .food-image {
    width: 160rpx;
    height: 160rpx;
  }
  
  .food-description {
    font-size: 20rpx;
  }
}

/* 加载状态 */
.avatar-image[src=""],
.food-image[src=""] {
  background-color: #f0f0f0;
  position: relative;
}

.avatar-image[src=""]:after,
.food-image[src=""]:after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #e0e0e0;
  border-top-color: #999999;
  border-radius: 50%;
  animation: loading 1s linear infinite;
}

@keyframes loading {
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

/* 悬浮效果 */
.share-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}
