/* 餐厅卡片组件样式 */

.restaurant-card {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
  gap: 24rpx;
}

.restaurant-card:active {
  background-color: #f5f5f5;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transform: scale(0.98);
}

/* 餐厅图片 */
.restaurant-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

/* 餐厅信息区域 */
.restaurant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 餐厅名称 */
.restaurant-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 元信息区域 */
.restaurant-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 评分区域 */
.rating-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 24rpx;
  color: #ffd700;
}

.rating-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 400;
}

/* 配送信息 */
.delivery-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.clock-icon {
  width: 24rpx;
  height: 24rpx;
}

.delivery-time {
  font-size: 24rpx;
  color: #999999;
}

/* 价格信息 */
.price-info {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 右箭头 */
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .restaurant-card {
    padding: 24rpx;
    gap: 16rpx;
  }
  
  .restaurant-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .restaurant-name {
    font-size: 28rpx;
  }
  
  .rating-text {
    font-size: 24rpx;
  }
  
  .star {
    font-size: 20rpx;
  }
  
  .delivery-time,
  .price-info {
    font-size: 20rpx;
  }
}

/* 加载状态 */
.restaurant-image[src=""] {
  background-color: #f0f0f0;
  position: relative;
}

.restaurant-image[src=""]:after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #999999;
  border-radius: 50%;
  animation: loading 1s linear infinite;
}

@keyframes loading {
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}
