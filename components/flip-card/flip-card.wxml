<!-- 翻牌组件 -->
<view 
  class="flip-card {{isFlipped ? 'flipped' : ''}} {{isSelected ? 'selected' : ''}}"
  bindtap="onCardTap"
>
  <!-- 卡片容器 -->
  <view class="card-container">
    <!-- 正面 -->
    <view class="card-front">
      <text class="card-placeholder">点击翻牌</text>
    </view>
    
    <!-- 背面 -->
    <view class="card-back">
      <text class="food-icon">{{cardData.icon}}</text>
      <text class="food-name">{{cardData.name}}</text>
    </view>
  </view>
  
  <!-- 选中效果 -->
  <view class="selected-overlay" wx:if="{{isSelected}}">
    <text class="selected-text">就是它！</text>
  </view>
</view>
