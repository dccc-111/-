/* 主页面样式 - 极简黑白风格 */

.container {
  padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}

.navbar-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
}

.navbar-share {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 偏好设置区 */
.preference-section {
  margin-top: 120rpx; /* 导航栏高度 */
  padding: 40rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 24rpx;
  display: block;
}

.preference-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.preference-btn {
  height: 160rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
}

.preference-btn.active {
  background-color: #333333;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.preference-btn.active .preference-icon,
.preference-btn.active .preference-text {
  color: #ffffff;
}

.preference-icon {
  font-size: 64rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 300;
}

.preference-text {
  font-size: 24rpx;
  color: #999999;
  font-weight: 400;
}

/* 翻牌抽选区 */
.flip-section {
  padding: 40rpx;
}

.flip-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  background-color: #333333;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
}

.start-btn:active {
  background-color: #000000;
  transform: scale(0.98);
}

.start-btn.loading {
  background-color: #999999;
  pointer-events: none;
}

/* 优选推荐区 */
.recommendation-section {
  padding: 0 40rpx 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 24rpx;
  display: block;
}

.filter-tags {
  margin-bottom: 32rpx;
}

.tag-list {
  display: flex;
  gap: 16rpx;
  padding-right: 40rpx;
}

.filter-tag {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  color: #666666;
  border-radius: 32rpx;
  font-size: 24rpx;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.filter-tag.active {
  background-color: #333333;
  color: #ffffff;
}

.restaurant-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 社交分享区 */
.social-section {
  padding: 0 40rpx 40rpx;
}

.share-scroll {
  margin-top: 24rpx;
}

.share-list {
  display: flex;
  gap: 24rpx;
  padding-right: 40rpx;
}

/* 底部导航栏 */
.bottom-navbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 1000;
}

.navbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  position: relative;
  transition: all 0.2s ease;
}

.navbar-item.active {
  color: #000000;
}

.navbar-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #000000;
  border-radius: 2rpx;
}

.navbar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.navbar-text {
  font-size: 20rpx;
  color: #999999;
}

.navbar-item.active .navbar-text {
  color: #000000;
}

/* 安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .preference-grid {
    gap: 16rpx;
  }
  
  .preference-btn {
    height: 140rpx;
  }
  
  .preference-icon {
    font-size: 48rpx;
  }
  
  .preference-text {
    font-size: 20rpx;
  }
}

/* 动画效果 */
.fade-in-up {
  animation: fadeInUp 0.4s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
