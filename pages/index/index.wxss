/* 主页面样式 - 极简黑白风格 */

.container {
  padding-bottom: 120rpx;
  background-color: #f8f8f8;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}

.navbar-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
}

.share-icon {
  font-size: 32rpx;
  color: #333333;
}

/* 偏好设置区 */
.preference-section {
  margin-top: 120rpx;
  padding: 40rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 24rpx;
  display: block;
}

.preference-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.preference-btn {
  height: 160rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.preference-btn.active {
  background-color: #333333;
  transform: scale(1.05);
}

.preference-btn.active .preference-icon,
.preference-btn.active .preference-text {
  color: #ffffff;
}

.preference-icon {
  font-size: 64rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.preference-text {
  font-size: 24rpx;
  color: #999999;
}

/* 翻牌抽选区 */
.flip-section {
  padding: 40rpx;
}

.flip-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

/* 翻牌卡片样式 */
.flip-card {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  perspective: 1000rpx;
}

.card-container {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transition: transform 0.6s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.flip-card.flipped .card-container {
  transform: rotateY(180deg);
}

.flip-card.selected {
  transform: scale(1.05);
  z-index: 10;
}

.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  backface-visibility: hidden;
}

.card-back {
  transform: rotateY(180deg);
  border: 2rpx solid #333333;
}

.card-placeholder {
  font-size: 28rpx;
  color: #999999;
}

.food-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.food-name {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
}

.selected-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 215, 0, 0.9);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
}

.selected-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  background-color: #333333;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.start-btn.loading {
  background-color: #999999;
}

/* 推荐区域 */
.recommendation-section,
.social-section {
  padding: 0 40rpx 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 24rpx;
  display: block;
}

.filter-tags {
  margin-bottom: 32rpx;
}

.tag-list {
  display: flex;
  gap: 16rpx;
  padding-right: 40rpx;
}

.filter-tag {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  color: #666666;
  border-radius: 32rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.filter-tag.active {
  background-color: #333333;
  color: #ffffff;
}

.restaurant-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.restaurant-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.restaurant-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 16rpx;
  display: block;
}

.restaurant-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.rating-text,
.delivery-time,
.price-info {
  font-size: 24rpx;
  color: #666666;
}

.share-scroll {
  margin-top: 24rpx;
}

.share-list {
  display: flex;
  gap: 24rpx;
  padding-right: 40rpx;
}

.share-card {
  width: 280rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.user-nickname {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

.food-description {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}
